{% extends 'CocarBundle::layout.html.twig' %}

{% block main -%}
    <h2 class="general-title">{{ entity.description }}</h2>
    <center>
        <form action="{{ path('printer_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        	<input type="hidden" name="_method" value="PUT" />
            <div class="records_list">
                {{ form_errors(edit_form) }}
                {{ form_widget(edit_form._token) }}
                <div class="item-form">
                    <label>Nome:</label>
                    {{ form_widget(edit_form.name) }}
                </div>
                <div class="item-form">
                    <label>Descrição da impressora:</label>
                    {{ form_widget(edit_form.description) }}
                </div>
                <div class="item-form">
                    <label>Community da impressora:</label>
                    {{ form_widget(edit_form.communitySnmpPrinter) }}
                </div>
                <div class="item-form">
                    <label>Host:</label>
                    {{ form_widget(edit_form.host) }}
                </div>
                <div class="item-form">
                    <button type="submit">Editar</button>
                </div>
            </div>
        </form>
    </center>
    <ul class="record_actions">
    <li>
        <a href="{{ path('entity') }}">
            Voltar a lista
        </a>
    </li>
    <li>
        <form action="{{ path('printer_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="deletar">Deletar</button>
        </form>
    </li>
</ul>
{% endblock %}
